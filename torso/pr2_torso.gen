component pr2_torso{
	version		"1.0";
	lang		"c";
	require		"genom3 >= 2.99.24";
    
    exception   INVALID_TORSO;

    task move{
        period      50ms;
        priority    200;
        stack       4000;

        codel <start>   InitModule() yield ether;
    };

    activity move_torso(in double torso){
        codel <start>   mtMove(in torso) yield ether;

        validate    controlTorso(in torso);
        task move;
        throw   INVALID_TORSO;
    };
};
